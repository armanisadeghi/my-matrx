{
  "name": "my-matrx",
  "version": "1.0.0",
  "description": "Simple static site for HTML pages with easy deployment",
  "main": "index.html",
  "scripts": {
    "dev": "npx http-server -p 3000 -c-1",
    "preview": "npx http-server -p 8080 -c-1",
    "generate-uuid": "node -e \"console.log('New page ID:', require('crypto').randomUUID())\"",
    "serve": "npx http-server -p 3000 -c-1 -o",
    "update-index": "node update-index.js",
    "create-page": "node create-page.js",
    "new-page": "npm run create-page && npm run update-index"
  },
  "keywords": ["static", "html", "vercel"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "."
  },
  "dependencies": {
    "node-html-parser": "^6.1.12"
  }
}
